<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_margin="10dp"
    android:padding="13dp"
    android:elevation="8dp"
    app:cardCornerRadius="10dp"
    tools:context=".ui.home.UserFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:columnCount="6"
        android:rowCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="序号:"
            android:padding="3dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名:"
            android:padding="3dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="张三" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄:"
            android:padding="3dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_age_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务年限:"
            android:padding="3dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_service_year_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="技能:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_skill_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="编程" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户好评:"
            android:padding="3dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_remark_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="5星好评" />

    </GridLayout>
</androidx.cardview.widget.CardView>